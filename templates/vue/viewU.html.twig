{% extends 'base.html.twig' %}
{% block body %}
<div class=" container text-center" id="liste">
    <h1 class="my-3 text-center">Liste de toutes Utilisateur</h1>
    <div class="container row row my-3">
        {% if user | length > 0 %}
            <table class="table table-striped table table-hover bg-primary">
                <thead class="text-white text-uppercase">
                    <tr>
                        <th>Nom</th>
                        <th>Photo</th>
                        <th><a href="#"><i class="fas fa-print text-end"></i></a></th>
                    </tr>
                </thead>
                {% for l in user %}
                <tbody class="bg-white">
                    <tr>
                        <td>{{l.pseudo}}</td>
                        <td><img src="/img/user/{{l.picture}}" class="rounded"></td>
                        <td>
                            <a href="{{path('edit_user')}}" class="btn btn-sm">
                                <i class="fa-solid fa-user-pen"></i>
                            </a>
                            <a href="{{path('del_cmd',{'id':l.id})}}" class="btn btn-sm">
                                <i class="fas fa-trash"></i>
                            </a>
                        <td>
                    </tr>
                </tbody>
                {% endfor %}
            </table>
    {% else %}
        <p class="h1"><em>Aucune Utilisateur enregistr√©</em></p>
    {% endif %}
    </div>
</div>
{% endblock %}