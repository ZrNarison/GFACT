{% extends 'base.html.twig' %}
{% block body %}
<div class="container" id="liste">
    <h1 class="my-3 text-center">Liste de tous les commande</h1>
    <div class="container row">
        <div class="d-block row">
            <div class="float-start">
                <div class="float-start">eto ny liste deroulante</div>
                <a href="{{path('Commande')}}"><i class="fa-sharp fa-solid fa-newspaper float-end"></i></a>
            </div>
        </div>
    </div>
    <div class="container row mt-5 float-none">
    {% if cmd | length > 0 %}
            <table class="table table-striped table table-hover bg-primary">
                <thead class="text-white text-uppercase">
                    <tr >
                        <th>Désignation</th>
                        <th>Période</th>
                        <th>Durée</th>
                        <th class="text-end">Quantité</th>
                        <th class="text-end">Prix unitaire</th>
                        <th class="text-end">Montant</th>
                        <th class="text-center">Action</th>
                        <th><a href="#"><i class="fas fa-print" alt="Imprimer"></i></a></th>
                    </tr>
                </thead>
                {% for c in cmd %}
                <tbody class="bg-white">
                    <tr>
                        <td>{{c.design}}</td>
                        <td>{{c.prd}}</td>
                        <td>{{c.duree}}</td>
                        <td class="text-end">{{c.qte}}</td>
                        <td class="text-end">{{c.pu|number_format(0, ',', ' ')}}</td>
                        <td class="text-end">{{(c.qte * c.pu)|number_format(0, ',', ' ')}}</td>
                        <td class="text-center">
                            <a href="{{path('edit_commande',{'slug':c.CmSlug})}}" class="btn btn-sm">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a onclick="return confirm('Etes vous sur d avoir supprimer la commande {{c.design}} du {{c.dtCmd|date("d/m/Y")}} ?')" href="{{path('del_cmd',{'id':c.id})}}" class="btn btn-sm">
                                <i class="fas fa-trash"></i>
                            </a>
                        <td>
                    </tr>
                </tbody>
                {% endfor %}
            </table>
    {% else %}
        <p class="h1"><em>Aucune commande a ajouté</em></p>
    {% endif %}
    </div>
</div>
{% endblock %}