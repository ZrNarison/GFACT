{% extends 'base.html.twig' %}
{% block head %}{% endblock  %}
{% block body %}
<div class="container col-8 bg-white text-dark ">   
  {{form_start(form)}}
    <div class="xcontainer navbar-responsive sticky-top">
      <div class="float-end col-3 mt-1">
        <button type="submit" class="float-start col-6 btn btn-outline-success">Imprimer</button>
        <a href="{{path ('Liste_cmd')}}" class="float-end btn btn-outline-danger text-decoration-none" >Annuler</a>
      </div>
    </div>
  {{form_end(form)}}
    <div class="text-dark mb-5 mt-4 text-dark">
      {% for p in param %}
        <div class="mb-4 ">
          <img src="/img/paramettre/{{p.Logos}}" class="mb-1 mt-2" id="printlogo"/>
          <p class="mt-0 mb-0">{{(p.Std)}}</p>
          <p class="mt-0 mb-0">FM {{p.Frq}}MhZ</p>
          <p class="mt-0 mb-0">Adresse {{p.PAdres}}</p>
          <p class="mt-0 mb-0">Boite Postale: {{p.Bp}}</p>
          <p class="mt-0 mb-0">Email {{p.Mail}}</p>
          <p class="mt-0 mb-0">Télephone {{p.Telp}}</p>
          <p class="mt-0 mb-0">NIF N° {{p.PNif}}</p>
          <div class="float-none col-12">
            <div class="float-start col-8">
                <p class="mt-0 mb-0">STAT N° {{p.PStat}}</p>
                <p class="mt-0 mb-0">Compte Bancaire: {{p.PRib}}</p>
                <p class="mt-0 mb-0">TP {{p.Tp}}</p>
            </div>
            <div class="float-start mt-2">
                {% if clcm.CClient | length > 0   %}
                  <p class="mt-0 mb-0">Doit: {{clients.NomCl|upper}}</p>
                  <p class="mt-0 mb-0">Adresse: {{clients.Adress|upper}}</p>
                  <p class="mt-0 mb-0">B.C: {{clcm.Dos}}</p>
                  <p class="mt-0 mb-0">N° Diffusion: {{clcm.Dif}}</p>
                  <p class="mt-0 mb-0">Client : {{clcm.CClient}}</p>
                {% else %}
                  <p class="mt-0 mb-0">Doit: {{clients.NomCl|upper}}</p>
                  <p class="mt-0 mb-0">Adresse: {{clients.Adress|upper}}</p>
                {% endif %} 
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="float-none mt-5 text-center">
      {# <p class="mt-3 mb-0  float-start text-center tr">FACTURE N°: </p> #}
      <table class="table table-striped table table-hover bg-success text-center col-12">
        <thead class="up">
          <tr>
            <th>Désignation</th>
            <th>Période</th>
            <th>Durée</th>
            <th>Quantité</th>
            <th>Prix unitaire</th>
            <th>Montant</th>
          </tr>      
        </thead>
        {% for c in cmd %}
          <tbody class="bg-white text-dark">
            <tr>
              <td class="text-left">{{c.design}}</td>
              <td>{{c.prd}}</td>
              <td>{{c.duree}}</td>
              <td class="text-right">{{c.qte|number_format(0, ',', ' ')}}</td>
              <td class="text-right">{{c.pu|number_format(2, ',', ' ')}}</td>
              <td class="text-right" >{{(c.qte * c.pu)|number_format(2, ',', ' ')}}</td>
            </tr>
          </tbody>
        {% endfor %} 
      </table>
    </div>
    <div class="d-iblock col-12 tw bg-white mb-0 text-dark ">
      <div class="d-block ">
        <strong><p class="up float-end mt-0 mb-0">TOTAL {{total|number_format(0," "," ")}}</p></strong>
      </div>
      <div class="d-block text-dark mt-4 mb-5">
        <p class="mt-2 mb-1 text-dark" id="Nb">Arrêté la présente facture à la somme de <strong>{{Nbtotal|upper}} ARIARY ({{total|number_format(0," "," ")}}Ar)</strong></p>
      </div>
    </div>
</div>
{% endblock %}  